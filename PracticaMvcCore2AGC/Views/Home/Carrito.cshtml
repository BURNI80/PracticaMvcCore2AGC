@model List<Libro>

<h1>Carrito</h1>

@if (Model.Count() == 0)
{
    <h2>No hay productos</h2>
}
else
{
    @for(int i = 0; i<Model.Count();i++)
    {
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="~/images/@Model[i].Portada" alt="Card image cap" width="50px">
            <div class="card-body">
                <h5 class="card-title">@Model[i].Titulo</h5>
                <p class="card-text">@Model[i].Autor</p>
                <form method="post">
                    <input type="number" value="@i" name="posicion" hidden/>
                    <button class="btn btn-danger" >Eliminar</button>
                </form>
            </div>
        </div>
    }

   <a asp-action="Comprar" asp-controller="Home" >Finalizar Compra</a>
}